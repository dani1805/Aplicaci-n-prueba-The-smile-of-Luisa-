<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#91DCE6"
    tools:context=".FragmentMasks">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvBuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:shadowColor="#8BC34A"
            android:text="Ir al carrito"
            android:textSize="24sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvPrint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/baloo"
            android:text="Colecci贸n animal Print"
            android:textColor="#FF9761"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvEspecial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:text="Colecci贸n eventos especiales"
            android:textColor="#FF9761"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvSpring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:text="Colecci贸n spring"
            android:textColor="#FF9761"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvSmooth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:text="Mascarillas lisas para ellos y para ellas"
            android:textColor="#FF9761"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvColours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:text="Colecci贸n lunares de colores"
            android:textColor="#FF9761"
            android:textSize="24sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>